[user]
  email = igor@renderedtext.com
  name = Igor Šarčević
[push]
  default = current
[alias]
  a     = add
  all   = add -A
  st    = status -sb
  ci    = commit
  ca    = commit --amend
  br    = branch
  co    = checkout
  df    = diff
  dfc   = diff --cached
  lg    = log --pretty=format:'%C(yellow)%h%Creset %Cgreen(%><(12)%cr%><|(12))%Creset - %s %C(blue)<%an>%Creset'
  pl    = pull
  ps    = push
  undo  = reset --soft HEAD^
  count = !git shortlog -sne
  up    = !git checkout master && git pull && git checkout -
  purge = !git checkout master && git branch | grep -v "master" | xargs git branch -D

[color]
  diff   = auto
  status = auto
  branch = auto
